<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

   <ImageView
       android:id="@+id/imageView"
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:contentDescription="Achtergrond"
       android:src="@drawable/costum_background"
       app:layout_constraintStart_toStartOf="parent"
       tools:layout_editor_absoluteY="-74dp"></ImageView>

   <ImageView
       android:id="@+id/logoImageView"
       android:layout_width="125dp"
       android:layout_height="125dp"
       android:layout_alignParentStart="true"
       android:layout_alignParentTop="true"
       android:layout_marginStart="10dp"
       android:layout_marginTop="10dp"
       android:contentDescription="Logo van mijn app"
       android:src="@drawable/bram_logo"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toTopOf="parent" />

    <FrameLayout
        android:layout_width="100dp"
        android:layout_height="150dp"
        android:layout_marginStart="150dp"
        android:layout_marginTop="200dp"
        android:background="@drawable/square_background"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|top"
            android:text="Woonkamer" />

        <ImageView
            android:id="@+id/image_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center"
            android:src="@drawable/switch_selector" />

        <Switch
            android:id="@+id/switch_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="110dp"
            android:layout_gravity="center_horizontal|bottom"
            android:checked="false" />
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>