<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity_Contacten">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="Achtergrond"
        android:src="@drawable/costum_background"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/logoImageView"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="10dp"
        android:contentDescription="Logo van mijn app"
        android:src="@drawable/bram_logo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Belangrijk sectie -->
    <LinearLayout
        android:id="@+id/belangrijkLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/logoImageView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="#707070"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"
            android:text="Belangrijk"
            android:textSize="34sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2.5dp"
            android:background="#707070" />

        <!-- Huisarts -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="25dp">

            <ImageView
                android:id="@+id/huisartsImageView"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/doctor"
                android:contentDescription="Doctor" />

            <TextView
                android:id="@+id/huisartsTextView"
                android:layout_width="640dp"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="Huisarts"
                android:textSize="20sp" />
            <ImageView
                android:id="@+id/mobile_icoon_huisarts"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="8dp"
                android:contentDescription="WhatsApp Icon"
                android:background="@drawable/rounded_image_bg"
                android:layout_gravity="end"
                android:src="@drawable/mobile_icoon" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2.5dp"
            android:background="#707070" />

        <!-- Thuiszorgorganisaties -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="25dp">

            <ImageView
                android:id="@+id/thuiszorgImageView"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/doctor"
                android:contentDescription="Doctor" />

            <TextView
                android:id="@+id/thuiszorgorganisatiesTextView"
                android:layout_width="640dp"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="Thuiszorgorganisaties"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/mobile_icoon_thuiszorgorganisaties"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:contentDescription="WhatsApp Icon"
                android:background="@drawable/rounded_image_bg"
                android:src="@drawable/mobile_icoon" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2.5dp"
            android:background="#707070" />

        <!-- Dokter -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="25dp">

            <ImageView
                android:id="@+id/dokterImageView"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/doctor"
                android:contentDescription="Doctor"/>


            <TextView
                android:id="@+id/dokterTextView"
                android:layout_width="640dp"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="Dokter"
                android:textSize="20sp"
                android:clickable="true"
                android:onClick="onDokterTextViewClick" />

            <ImageView
                android:id="@+id/mobile_icoon_Doktor"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="8dp"
                android:src="@drawable/mobile_icoon"
                android:contentDescription="Mobile Icon"
                android:background="@drawable/rounded_image_bg"
                android:layout_gravity="end" />
        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="2.5dp"
            android:background="#707070" />

    </LinearLayout>

    <!-- Favoriete sectie -->
    <LinearLayout
        android:id="@+id/favorieteLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/belangrijkLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="Favoriete"
            android:textSize="34sp" />


        <View
            android:layout_width="match_parent"
            android:layout_height="2.5dp"
            android:background="#707070" />

        <!-- Xoon -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="25dp">

            <ImageView
                android:id="@+id/dochterImageView"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/kind"
                android:contentDescription="Kind" />

            <TextView
                android:id="@+id/dochterTextView"
                android:layout_width="642dp"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="Dochter"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/mobile_icoon_Dochter"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="8dp"
                android:src="@drawable/mobile_icoon"
                android:contentDescription="Mobile Icon"
                android:background="@drawable/rounded_image_bg"
                android:layout_gravity="end"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2.5dp"
            android:background="#707070" />

        <!-- Huwelijkspartner -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="25dp">

            <ImageView
                android:id="@+id/huwelijkspartnerImageView"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/man"
                android:contentDescription="Man" />

            <TextView
                android:id="@+id/huwelijkspartnerTextView"
                android:layout_width="643dp"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="Huwelijkspartner"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/mobile_icoon_Huwelijkspatner"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="8dp"
                android:src="@drawable/mobile_icoon"
                android:contentDescription="Mobile Icon"
                android:background="@drawable/rounded_image_bg"
                android:layout_gravity="end"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2.5dp"
            android:background="#707070" />

        <!-- Schoondochter -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="25dp">

            <ImageView
                android:id="@+id/schoondochterImageView"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/kind2"
                android:contentDescription="Schoondochter" />

            <TextView
                android:id="@+id/schoondochterTextView"
                android:layout_width="642dp"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="Schoondochter"
                android:textSize="20sp" />
            <ImageView
                android:id="@+id/mobile_icoon_Schoondochter"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="8dp"
                android:src="@drawable/mobile_icoon"
                android:contentDescription="Mobile Icon"
                android:background="@drawable/rounded_image_bg"
                android:layout_gravity="end"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2.5dp"
            android:background="#707070"
            android:layout_marginLeft="50dp"/>

    </LinearLayout>

    <!-- Familie sectie -->
    <LinearLayout
        android:id="@+id/familieLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/favorieteLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="Familie"
            android:textSize="34sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2.5dp"
            android:background="#707070" />

        <!-- Kleinzoon -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="25dp">

            <ImageView
                android:id="@+id/kleinzoonImageView"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/man"
                android:contentDescription="Kleinzoon" />

            <TextView
                android:id="@+id/kleinzoonTextView"
                android:layout_width="643dp"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="Kleinzoon"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/mobile_icoon_Kleinzoon"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="8dp"
                android:src="@drawable/mobile_icoon"
                android:contentDescription="Mobile Icon"
                android:background="@drawable/rounded_image_bg"
                android:layout_gravity="end"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2.5dp"
            android:background="#707070" />

    </LinearLayout>

    <!-- Overige sectie -->
    <LinearLayout
        android:id="@+id/overigeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/familieLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="Overige"
            android:textSize="34sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2.5dp"
            android:background="#707070" />

        <!-- Buurvrouw -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="25dp">

            <ImageView
                android:id="@+id/buurvrouwImageView"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/man"
                android:contentDescription="Buurman" />

            <TextView
                android:id="@+id/buurvrouwTextView"
                android:layout_width="642dp"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="Buurman"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/mobile_icoon_Buurman"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="8dp"
                android:src="@drawable/mobile_icoon"
                android:contentDescription="Mobile Icon"
                android:background="@drawable/rounded_image_bg"
                android:layout_gravity="end"/>
        </LinearLayout>

        <View
            android:layout_width="805dp"
            android:layout_height="2.5dp"
            android:background="#707070" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/terug_knop"
                android:layout_width="175dp"
                android:layout_height="175dp"
                android:layout_gravity="center_horizontal|fill_horizontal"
                android:contentDescription="Pijl naar links"
                android:src="@drawable/terug_knop"
                app:layout_constraintBottom_toBottomOf="@+id/imageView"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginBottom="25dp"
                android:layout_marginStart="25dp" />
            <ImageView
                android:id="@+id/sosImageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerInParent="true"
                android:layout_gravity="center_horizontal|center"
                android:src="@drawable/sos"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginBottom="25dp" />
        </LinearLayout>
    </LinearLayout>
    </LinearLayout>


</ScrollView>