<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".lichten_slaapkamer">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="@string/achtergrond"
        android:src="@drawable/costum_background"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="@string/verwarming"
        android:textSize="50sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/logoImageView"
        android:layout_width="125dp"



        android:layout_height="125dp"
        android:layout_alignParentStart="false"
        android:layout_alignParentTop="false"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:contentDescription="@string/logo_van_mijn_app"
        android:src="@drawable/bram_logo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <LinearLayout
        android:layout_width="774dp"
        android:layout_height="880dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="150dp"
        android:layout_marginEnd="20dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">



        <FrameLayout
            android:layout_width="763dp"
            android:layout_height="100dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_weight="1"
            android:gradientRadius="50dp"
            android:background="@drawable/square_background">



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|left"
                android:layout_marginTop="150dp"
                android:layout_marginLeft="40dp"
                android:text="@string/woonkamer"
                android:textSize="35sp"
                android:textStyle="bold"
                tools:ignore="RtlHardcoded" />



            <TextView
                android:layout_width="200dp"
                android:layout_height="100dp"
                android:layout_gravity="center_horizontal|left"
                android:layout_marginStart="170dp"
                android:layout_marginTop="30dp"
                android:text="@string/_23_c"
                android:textSize="90sp"
                android:textStyle="bold"
                tools:ignore="RtlHardcoded" />



            <ImageView
                android:id="@+id/image_view_1"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="20dp"
                android:src="@drawable/thermometer_home"
                android:contentDescription="@string/thermo" />



            <Switch
                android:id="@+id/woonkamer_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|right"
                android:layout_marginEnd="100dp"
                android:layout_marginTop="110dp"
                android:checked="false"
                android:scaleX="3"
                android:scaleY="3"
                tools:ignore="RtlHardcoded,UseSwitchCompatOrMaterialXml" />



            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="25dp"
                android:layout_gravity="center_horizontal|bottom"
                android:scaleX="1.5"
                android:scaleY="1.5"
                >



                <Button
                    android:id="@+id/minusButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="100dp"
                    android:backgroundTint="#E9F0FF"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:text="-"
                    android:textColor="#A1CBB7"
                    android:textSize="24sp"
                    tools:ignore="ButtonStyle,HardcodedText" />

                <Button
                    android:id="@+id/plusButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+"
                    android:textSize="24sp"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:backgroundTint="#E9F0FF"
                    android:textColor="#A1CBB7"
                    tools:ignore="ButtonStyle,HardcodedText" />



            </LinearLayout>
        </FrameLayout>




        <FrameLayout
            android:layout_width="763dp"
            android:layout_height="100dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_weight="1"
            android:gradientRadius="50dp"
            android:background="@drawable/square_background">



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|left"
                android:layout_marginTop="150dp"
                android:layout_marginStart="40dp"
                android:text="@string/slaapkamer"
                android:textSize="35sp"
                android:textStyle="bold"
                tools:ignore="RtlHardcoded" />



            <TextView
                android:layout_width="200dp"
                android:layout_height="100dp"
                android:layout_gravity="center_horizontal|left"
                android:layout_marginStart="170dp"
                android:layout_marginTop="30dp"
                android:text="@string/_99_c"
                android:textSize="90sp"
                android:textStyle="bold"
                tools:ignore="RtlHardcoded" />


            <ImageView
                android:id="@+id/image_view_2"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="20dp"
                android:src="@drawable/thermometer_home"
                android:contentDescription="@string/thermo" />

            <Switch
                android:id="@+id/slaapkamer_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|right"
                android:layout_marginRight="100dp"
                android:layout_marginTop="110dp"
                android:checked="false"
                android:scaleX="3"
                android:scaleY="3"
                tools:ignore="RtlHardcoded,UseSwitchCompatOrMaterialXml" />



            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="25dp"
                android:layout_gravity="center_horizontal|bottom"
                android:scaleX="1.5"
                android:scaleY="1.5"
                >



                <Button
                    android:id="@+id/minusButton2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-"
                    android:textSize="24sp"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:backgroundTint="#E9F0FF"
                    android:textColor="#A1CBB7"
                    android:layout_marginEnd="100dp"
                    tools:ignore="ButtonStyle,HardcodedText" />



                <Button
                    android:id="@+id/plusButton2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+"
                    android:textSize="24sp"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:backgroundTint="#E9F0FF"
                    android:textColor="#A1CBB7"
                    tools:ignore="ButtonStyle,HardcodedText" />



            </LinearLayout>
        </FrameLayout>




        <FrameLayout
            android:layout_width="763dp"
            android:layout_height="100dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_weight="1"
            android:gradientRadius="50dp"
            android:background="@drawable/square_background">



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|left"
                android:layout_marginTop="150dp"
                android:layout_marginStart="40dp"
                android:text="@string/toilet"
                android:textSize="35sp"
                android:textStyle="bold"
                tools:ignore="RtlHardcoded" />



            <TextView
                android:layout_width="200dp"
                android:layout_height="100dp"
                android:layout_gravity="center_horizontal|left"
                android:layout_marginStart="170dp"
                android:layout_marginTop="30dp"
                android:text="@string/_28_c"
                android:textSize="90sp"
                android:textStyle="bold"
                tools:ignore="RtlHardcoded" />



            <ImageView
                android:id="@+id/image_view_3"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="20dp"
                android:src="@drawable/thermometer_home"
                android:contentDescription="@string/thermo" />



            <Switch
                android:id="@+id/toilet_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|right"
                android:layout_marginEnd="100dp"
                android:layout_marginTop="110dp"
                android:checked="false"
                android:scaleX="3"
                android:scaleY="3"
                tools:ignore="RtlHardcoded,UseSwitchCompatOrMaterialXml" />



            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="25dp"
                android:layout_gravity="center_horizontal|bottom"
                android:scaleX="1.5"
                android:scaleY="1.5"
                >



                <Button
                    android:id="@+id/minusButton3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-"
                    android:textSize="24sp"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:backgroundTint="#E9F0FF"
                    android:textColor="#A1CBB7"
                    android:layout_marginEnd="100dp"
                    tools:ignore="ButtonStyle,HardcodedText" />



                <Button
                    android:id="@+id/plusButton3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+"
                    android:textSize="24sp"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:backgroundTint="#E9F0FF"
                    android:textColor="#A1CBB7"
                    tools:ignore="ButtonStyle,HardcodedText" />



            </LinearLayout>

        </FrameLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="800dp"
        android:layout_height="200dp"
        android:layout_marginTop="1060dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/terug_knop"
            android:layout_width="125dp"
            android:layout_height="125dp"
            android:layout_marginStart="100dp"
            android:layout_marginTop="10dp"
            android:contentDescription="@string/pijl_naar_links"
            android:src="@drawable/terug_knop" />

        <ImageView
            android:id="@+id/sosImageView"
            android:layout_width="195dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="80dp"
            android:layout_marginTop="0dp"
            android:src="@drawable/sos"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:contentDescription="@string/sosknop" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>