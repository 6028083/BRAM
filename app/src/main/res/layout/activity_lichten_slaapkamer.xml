<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".lichten_slaapkamer">



    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="Achtergrond"
        android:src="@drawable/costum_background"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"></ImageView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Verwarming"
        android:textSize="50sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/logoImageView"
        android:layout_width="125dp"



        android:layout_height="125dp"
        android:layout_alignParentStart="false"
        android:layout_alignParentTop="false"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:contentDescription="Logo van mijn app"
        android:src="@drawable/bram_logo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <LinearLayout
        android:layout_width="774dp"
        android:layout_height="880dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="150dp"
        android:layout_marginEnd="20dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">



        <FrameLayout
            android:layout_width="763dp"
            android:layout_height="100dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_weight="1"
            android:gradientRadius="50dp"
            android:background="@drawable/square_background">



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|left"
                android:layout_marginTop="150dp"
                android:layout_marginLeft="40dp"
                android:text="Woonkamer"
                android:textSize="35sp"
                android:textStyle="bold"/>



            <TextView
                android:layout_width="200dp"
                android:layout_height="100dp"
                android:layout_gravity="center_horizontal|left"
                android:layout_marginStart="170dp"
                android:layout_marginTop="30dp"
                android:text="23°C"
                android:textSize="90px"
                android:textStyle="bold"/>



            <ImageView
                android:id="@+id/image_view_1"
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:layout_gravity="center_horizontal|left"
                android:layout_marginLeft="14dp"
                android:src="@drawable/switch_selector" />



            <Switch
                android:id="@+id/woonkamer_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|right"
                android:layout_marginRight="100dp"
                android:layout_marginTop="110dp"
                android:checked="false"
                android:scaleX="3"
                android:scaleY="3"/>



            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="25dp"
                android:layout_gravity="center_horizontal|bottom"
                android:scaleX="1.5"
                android:scaleY="1.5"
                >



                <Button
                    android:id="@+id/minusButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="100dp"
                    android:backgroundTint="#E9F0FF"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:text="-"
                    android:textColor="#A1CBB7"
                    android:textSize="24px"



                    />



                <Button
                    android:id="@+id/plusButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+"
                    android:textSize="24sp"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:backgroundTint="#E9F0FF"
                    android:textColor="#A1CBB7" />



            </LinearLayout>
        </FrameLayout>




        <FrameLayout
            android:layout_width="763dp"
            android:layout_height="100dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_weight="1"
            android:gradientRadius="50dp"
            android:background="@drawable/square_background">



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|left"
                android:layout_marginTop="150dp"
                android:layout_marginLeft="40dp"
                android:text="Slaapkamer"
                android:textSize="35sp"
                android:textStyle="bold"/>



            <TextView
                android:layout_width="200dp"
                android:layout_height="100dp"
                android:layout_gravity="center_horizontal|left"
                android:layout_marginStart="170dp"
                android:layout_marginTop="30dp"
                android:text="99°C"
                android:textSize="90px"
                android:textStyle="bold"/>



            <ImageView
                android:id="@+id/image_view_2"
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:layout_gravity="center_horizontal|left"
                android:layout_marginLeft="14dp"
                android:src="@drawable/switch_selector" />



            <Switch
                android:id="@+id/slaapkamer_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|right"
                android:layout_marginRight="100dp"
                android:layout_marginTop="110dp"
                android:checked="false"
                android:scaleX="3"
                android:scaleY="3"/>



            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="25dp"
                android:layout_gravity="center_horizontal|bottom"
                android:scaleX="1.5"
                android:scaleY="1.5"
                >



                <Button
                    android:id="@+id/minusButton2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-"
                    android:textSize="24sp"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:backgroundTint="#E9F0FF"
                    android:textColor="#A1CBB7"
                    android:layout_marginRight="100dp"



                    />



                <Button
                    android:id="@+id/plusButton2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+"
                    android:textSize="24sp"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:backgroundTint="#E9F0FF"
                    android:textColor="#A1CBB7" />



            </LinearLayout>
        </FrameLayout>




        <FrameLayout
            android:layout_width="763dp"
            android:layout_height="100dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_weight="1"
            android:gradientRadius="50dp"
            android:background="@drawable/square_background">



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|left"
                android:layout_marginTop="150dp"
                android:layout_marginLeft="40dp"
                android:text="Toilet"
                android:textSize="35sp"
                android:textStyle="bold"/>



            <TextView
                android:layout_width="200dp"
                android:layout_height="100dp"
                android:layout_gravity="center_horizontal|left"
                android:layout_marginStart="170dp"
                android:layout_marginTop="30dp"
                android:text="28°C"
                android:textSize="90px"
                android:textStyle="bold"/>



            <ImageView
                android:id="@+id/image_view_3"
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:layout_gravity="center_horizontal|left"
                android:layout_marginLeft="14dp"
                android:src="@drawable/switch_selector" />



            <Switch
                android:id="@+id/toilet_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|right"
                android:layout_marginRight="100dp"
                android:layout_marginTop="110dp"
                android:checked="false"
                android:scaleX="3"
                android:scaleY="3"/>



            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="25dp"
                android:layout_gravity="center_horizontal|bottom"
                android:scaleX="1.5"
                android:scaleY="1.5"
                >



                <Button
                    android:id="@+id/minusButton3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-"
                    android:textSize="24sp"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:backgroundTint="#E9F0FF"
                    android:textColor="#A1CBB7"
                    android:layout_marginRight="100dp"



                    />



                <Button
                    android:id="@+id/plusButton3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+"
                    android:textSize="24sp"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:backgroundTint="#E9F0FF"
                    android:textColor="#A1CBB7" />



            </LinearLayout>

        </FrameLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="800dp"
        android:layout_height="200dp"
        android:layout_marginTop="1080dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/terug_knop"
            android:layout_width="175dp"
            android:layout_height="175dp"
            android:layout_gravity="center_horizontal|fill_horizontal"
            android:layout_marginStart="25dp"
            android:layout_marginTop="24dp"
            android:contentDescription="Pijl naar links"
            android:src="@drawable/terug_knop" />

        <ImageView
            android:id="@+id/sosImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerInParent="true"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/sos"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>